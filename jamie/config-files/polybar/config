[module/network]
type = internal/network
interface = wlp0s20f3

interval = 1

format-connected = %{A1:networkmanager_dmenu:}<ramp-signal>%{A}
format-disconnected = %{A1:networkmanager_dmenu:}<label-disconnected>%{A}

label-disconnected = 
label-disconnected-foreground = ${nord.urgent}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 

ramp-signal-0-foreground = ${nord.urgent}
ramp-signal-0-underline = ${nord.urgent}

ramp-signal-1-foreground = ${nord.notify}
ramp-signal-1-underline = ${nord.notify}

ramp-signal-2-foreground = ${nord.nord7}
ramp-signal-2-underline = ${nord.nord7}

ramp-signal-3-foreground = ${nord.success}
